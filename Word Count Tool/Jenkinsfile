pipeline {
    agent { label 'new-node' }
    triggers {
        githubPush()
    }
    stages {
        stage('Git Clone') {
            steps {
                git url: 'https://github.com/harshada137/Python_Projects.git', branch: 'main'
                echo 'Clonning Repo'
            }
        }
      
      stage('Execute Repo') {
    steps {
        // Option A: Using quotes (Easy fix)
        sh  'python3 "Word Count Tool/main.py"'
        
        // OR Option B: Using 'dir' (Cleaner fix)
        /*
        dir('Word Count Tool') {
            sh 'echo "test.txt" | python3 main.py'
        }
        */
    }

      }
    }
}
